<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="./css/styles.css" rel="stylesheet">
    <script src="https://cdn.tailwindcss.com"></script>
    <title>To-do manager</title>
    <script>
        function updateTodo(id) {
            fetch(`/todos/${id}/markAsCompleted` , {
                method: "put" ,
                headers: { "Content-Type": "application/json" },
            })

                .then((res) => {
                    if( res.ok) {
                        window.location.reload();

                    }
                

            })
            .catch((err) => conspole.error(err));
        }
        function deleteTodo(id) {
            fetch(`/todos/${id}/markAsCompleted` , {
                method: "put" ,
                headers: { "Content-Type": "application/json" },
            })

                .then((res) => {
                    if( res.ok) {
                        window.location.reload();

                    }
                

            })
            .catch((err) => conspole.error(err));
        }
    </script>
    
</head>
<body>
    <div class="grid grid-cols-6">
        <div class="col-start-3 col-span-2">
            <%- include('header.ejs') %>
            <form action="/todos" method="post">
                <div class="flex gap-2 p-4">
                    <div class="flex-auto">
                        <input type="text" name="title" placeholder="whats next?" class="border border-gray-300 rounded text-gray-900 w-full p-2 text-sm" required/>
                    </div>

                <div class="flex-auto " >
                    <input type="date" name="dueDate" class="border border-gray-300 rounded text-gray-900 w-full p-2 text-sm leading-4" />
                </div>
                <div class="flex-none">
                    <button type="submit" class="bg-green-600 text-white px-5 py-2 rounded font-medium py-1.5">Add</button>
                </div>
            </div>
            </form>
            <%- include('todos.ejs') %>
        </div>

    </div>

    
    
</body>
</html>